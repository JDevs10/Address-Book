{% extends 'base.html.twig' %}

{% block body %}
    <div class="container bg-muted">
        <h1>Hello from contact list</h1>
        {% for contact in contact %}
            <div class="table-responsive">
                <table class="table table-sm table-hover">
                <thead class="thead-dark">
                    <tr>
                    <th scope="col">#</th>
                    <th scope="col" style="width: 20%;">First Name</th>
                    <th scope="col" style="width: 20%;">Last Name</th>
                    <th scope="col" style="width: 20%;">Email</th>
                    <th scope="col" style="width: 20%;">Address</th>
                    <th scope="col" style="width: 20%;">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                    <th scope="row">{{contact.id}}</th>
                    <td>{{contact.firstName}}</td>
                    <td>{{contact.lastName}}</td>
                    <td>{{contact.email}}</td>
                    <td>{{contact.address}}</td>
                    <td><button class="bg-info">View</button>
                        <button class="bg-primary">Edit</button>
                        <button class="bg-danger">Delete</button></td>
                    </tr>
                    <tr>
                </tbody>
                </table>
            </div>
        {% endfor %}
    </div>
{% endblock %}